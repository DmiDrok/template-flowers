-
  var mainTitle = 'Flowers Ukraine'

block variables
  -
    var title = ''

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="format-detection" content="telephone=no")
    title #{mainTitle} | #{title}

    link(rel="stylesheet" href="./css/style.min.css")
    link(rel="icon" href="./images/src/logo.svg")


    script(defer src="./js/libs/choices.min.js")
    script(defer src="./js/libs/swiped-events.js")
    script(defer src="./js/libs/inputmask.min.js")
    script(defer src="./js/libs/swiper.min.js")
    script(src="https://api-maps.yandex.ru/2.1/?apikey=8a668916-04d0-4f25-8d4a-b97888776387&lang=ru_RU")

    script(defer src="./js/main.js")
  body.no-js
    include ../includes/sections/mobile-menu
    include ../includes/sections/tel-popup
    include ../includes/sections/favourite-popup

    aside#options.options
      .container.options__container
        .options__row.desktop
          ul.options__lists
            li.options-list
              label(for="select-valute").options-list__title Валюта
              select.default-select#select-valute.options-list__select(name="valute")
                option(value="grivens" selected) Грн
                option(value="rubles") Рбл
                option(value="dollars") Длр
                option(value="dollars") Евр

            li.options-list
              label(for="select-language").options-list__title Язык
              select.default-select#select-language.options-list__select(name="language")
                option(value="ru" selected) RU
                option(value="ua") UA
                option(value="en") EN

            li.options-list
              label(for="select-city").options-list__title Город
              select.default-select#select-city.options-list__select(name="city")
                option(value="kiev" selected) Киев
                option(value="lvov") Львов
                option(value="kharkov") Харьков
                option(value="odessa") Одесса

          nav.nav
            ul.options__links
              li.options-link
                a(href="#").options-link__link-container
                  .options-link__icon-block
                    img.options-link__icon(src="./images/src/heart-icon.svg" alt="" aria-hidden="true")
                  
                    .options-link__icon-counter-block
                      span.counter.options-link__icon-counter 2

                  span.options-link__title Закладки
              li.options-link
                a(href="#").options-link__link-container
                  .options-link__icon-block
                    img.options-link__icon(src="./images/src/car-icon.svg" alt="" aria-hidden="true")

                  span.options-link__title Доставка и оплата
              li.options-link
                a(href="#").options-link__link-container
                  .options-link__icon-block
                    img.options-link__icon(src="./images/src/phone-icon.svg" alt="" aria-hidden="true")

                  span.options-link__title Контакты

            ul.options__login.options-enter
              li.options-enter__elem
                a(href="#" aria-label="Войти в аккаунт").options-enter__link.options-enter__login
                  img.options-enter__icon(src="./images/src/user-icon.svg" alt="" aria-hidden="true")             

                  span.options-enter__title Войти

              li.options-enter__delimiter

              li.options-enter__elem
                a(href="#" aria-label="Зарегистрировать аккаунт").options-enter__link.options-enter__register
                  span.options-enter__title Регистрация
        .options__row.mobile
          ul.options__lists.options__links
            li.options-list.options-list-1
              select.default-select#select-valute-mobile.options-list__select(name="valute")
                option(value="grivens" selected) Грн
                option(value="rubles") Рбл
                option(value="dollars") Длр
                option(value="dollars") Евр

