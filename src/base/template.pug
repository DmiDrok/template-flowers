                span.options-link__title Доставка и оплата

            li.options-list.options-list-2
              select.default-select#select-language-mobile.options-list__select(name="language")
                option(value="ru" selected) RU
                option(value="ua") UA
                option(value="en") EN

    include ../includes/sections/header

    block content

    include ../includes/sections/footer