.menu#menu-mobile.menu-mobile.menu-filter
  .menu__row
    .menu__header
      span.menu__title Фильтр
      button(type="button").menu__close
        img(src="./images/src/close-icon.svg" alt="закрыть меню")

    .menu__content
      .menu-field.reset-field
        button(type="button").action-btn.menu-filter__reset Скинуть фильтр

      .menu__area
        .menu-field.menu-filter__option.for-who-field
          span.menu-field__title.for-who-field__title Кому
          label(for="select-city-mobile").menu-field__value.for-who-field__value 
            span.menu-field__value-label Выберите
            select.filter-select#select-for-who-mobile.options-list__select(name="for-who")
              option(value="value-1" selected) Маме
              option(value="value-2") Папе
              option(value="value-3") Бабушке
              option(value="value-4") Дедушке
        .menu-field.menu-filter__option.color-field
          span.menu-field__title.color-field__title По цвету
          label(for="select-city-mobile").menu-field__value.color-field__value
            span.menu-field__value-label Выберите
            select.filter-select#select-color-mobile.options-list__select(name="color")
              option(value="value-1" selected) Розовые розы
              option(value="value-2") Красные розы
              option(value="value-3") Фиолетовые розы
              option(value="value-4") Оранжевые розы
        .menu-field.menu-filter__option.reason-field
          span.menu-field__title.reason-field__title Повод
          label(for="select-city-mobile").menu-field__value.reason-field__value
            span.menu-field__value-label Выберите
            select.filter-select#select-reason-mobile.options-list__select(name="event")
              option(value="value-1" selected) 8 марта
              option(value="value-2") 23 февраля
              option(value="value-3") 9 мая
              option(value="value-4") День рождения


